{
  "name": "lightpanel-vue",
  "version": "1.0.0",
  "description": "轻面板 Vue3 重构版 - 基于 Vue 3 + Vite + shadcn-vue + Motion 的现代化导航面板",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "pinia": "^2.3.0",
    "@vueuse/core": "^12.4.0",
    "motion-v": "^1.10.2",
    "radix-vue": "^1.9.17",
    "lucide-vue-next": "^0.469.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "vite": "^6.0.5",
    "vue-tsc": "^2.2.0",
    "typescript": "~5.7.2",
    "@types/node": "^22.10.5",
    "eslint": "^9.17.0",
    "eslint-plugin-vue": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
