    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^9.33.0",
    "prettier": "^3.8.1",
    "typescript": "~5.7.3",
    "vite": "^6.4.1",
    "vue-tsc": "^2.2.12"
